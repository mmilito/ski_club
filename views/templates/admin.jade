//- extends layout
div.container
	div.background-white.container
		h3.under-navbar ADMINISTRATION
		button.home-btn.btn-warning.pull-right
			a(href='#/' type="button") home
		div(ng-controller="adminController")
			form(editable-form="" name="tableform" oncancel="cancel()")
				table.table.table-striped.table-bordered.table-condensed
					thead
						tr
							th.header First
							th.header 
								a.sort-tag(href='' ng-click='predicate="name.last"; reverse=!reverse') Last
							th.header
								a.sort-tag(href='' ng-click='predicate="skiLevel"; reverse=!reverse') SKI level
							th.header
								a.sort-tag(href='' ng-click='predicate="sbLevel"; reverse=!reverse') SB level
							th.header
								a.sort-tag(href='' ng-click='predicate="age"; reverse=!reverse') Age
							th.header DOB 
							th.header 
								span(ng-show="tableform.$visible") Action

					tbody
						tr(ng-repeat="kid in kids | orderBy:predicate:reverse | filter:filterUser")
							td.edit.firstname 
								span.ng-scope.ng-binding.editable(ng-click="tableform.$show()" editable-text="kid.name.first" e-form="tableform" e-ng-change="update(kid.id,this,'name.first',kid.name.first)" e-ng-model-options="{updateOn:'blur'}") {{kid.name.first}}
							td.edit.lastname 
								span(ng-click="tableform.$show()" editable-text="kid.name.last" e-form="tableform" e-ng-change="update(kid.id,this,'name.last',kid.name.last)" e-ng-model-options="{updateOn:'blur'}") {{kid.name.last}}
							td.edit
									span.ng-hide(ng-hide="tableform.$visible") {{kid.skiLevel}}
									select.skiLevel(editable-select="kid.skiLevel" type="text" ng-show="tableform.$visible" e-ng-change="update(kid.id,this,'skiLevel')" e-ng-options="c.color as c.label for c in skiValues(kid.category)")
							td.edit.sbLevel
									span.ng-hide(ng-hide="tableform.$visible") {{kid.sbLevel}}
									select(editable-select="kid.sbLevel" type="text" ng-show="tableform.$visible" e-ng-change="update(kid.id,this,'sbLevel')" e-ng-options="c.color as c.label for c in sbValues(kid.category)")
							td.edit.age {{kid.age}}
							td.edit.dob
								span.ng-scope.ng-binding.editable(ng-click="tableform.$show()" editable-text="kid.dob | date" e-form="tableform" e-ng-change="update(kid.id,this,'dob',kid.dob)" e-ng-model-options="{updateOn:'blur'}") {{kid.dob | date}}
							td
								span.glyphicon.glyphicon-pencil(ng-show="tableform.$visible" ng-click="openExisting(kid.id)")
								button.btn.btn-warning.pull-right(type="button" ng-show="tableform.$visible" ng-click="delete(kid._id); deleteFromView(kid.id)") del
					div.btn-edit
						button.btn.btn-default(type="button" ng-show="!tableform.$visible" ng-click="tableform.$show()") edit
					div.btn-form(ng-show="tableform.$visible")
						button.btn.btn-default(ng-disabled="tableform.$waiting" ng-click="tableform.$cancel()") cancel
						button.btn.btn-default(ng-disabled="tableform.$waiting" ng-click="openNew()") add new eskimo
						button.btn.btn-default(ng-disabled="tableform.$waiting" ng-click="reloadRoute()") refresh
			
			//- modal for adding new kid
			script#addModalContent(type="text/ng-template")
				div.modal-header
					h3.modal-title New Eskimo

				form.simple-form(novalidate ng-submit="$close(kid)")
					div.modal-body
						input.first-name(ng-model="kid.name.first" type="text" placeholder="first name")

						input.last-name(ng-model="kid.name.last" type="text" placeholder="last name")

						input.dob(type="date" ng-model="kid.dob" placeholder="dob")
						input.street(type="text" ng-model="kid.address.street" placeholder="street address")
						input.city(type="text" ng-model="kid.address.city" placeholder="city")
						input.state(type="text" ng-model="kid.address.state" placeholder="CO")
						input.zip(type="text" ng-model="kid.address.zip" placeholder="zip")
						input.mainCell(type="text" ng-model="kid.phone.mainCell" placeholder="cell")
						input.emergCell(type="text" ng-model="kid.phone.emergCell" placeholder="emergency number")
						select.busStop(type="text" ng-model="busStops")
							option(ng-repeat="stop in busStops | orderBy:'stop' track by $index") {{stop.stop}}
						input.skiLevel(type="text" ng-model="kid.skiLevel" placeholder="ski level")
						input.sbLevel(type="text" ng-model="kid.sbLevel" placeholder="sb level")
						input.checkbox.status(type="checkbox" ng-model="kid.active")
						input.medical(type="text" ng-model="kid.medical" placeholder="medical info")

					div.modal-footer
						button.btn.btn-primary(type="submit") OK
						button.btn.btn-warning(ng-click="$dismiss()") Cancel

